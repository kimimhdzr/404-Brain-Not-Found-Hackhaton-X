<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:padding="8dp"> <!-- Aligns to the left (incoming) -->

    <!-- MessageModel bubble for incoming messageModel -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="55dp"
        android:background="@drawable/bg_incoming_message"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- MessageModel Text -->
        <TextView
            android:id="@+id/text_incoming_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Aight bet"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16sp" />

        <!-- MessageModel Attachment (optional) -->
        <ImageView
            android:id="@+id/img_incoming_attachment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone" /> <!-- Initially hidden, shown only if there is an attachment -->

        <!-- Timestamp -->
        <TextView
            android:id="@+id/text_incoming_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:text="12:45 PM"
            android:textColor="?attr/subtitleTextColor"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
